{
  "name": "@barakamwakisha/qlopin",
  "version": "0.0.1",
  "private": false,
  "description": "An opinionated GraphQL utility package that hastens development, putting conventions over code and reducing boilerplate.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "ci": "pnpm lint && pnpm test && pnpm build",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "tsc",
    "test": "vitest run",
    "release": "changeset publish"
  },
  "keywords": [
    "graphql",
    "opinionated",
    "conventions",
    "utility",
    "boilerplate",
    "codegen"
  ],
  "author": "Baraka Mwakisha <baraka@gyrofms.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/barakamwakisha/qlopin"
  },
  "bugs": {
    "url": "https://github.com/barakamwakisha/qlopin/issues"
  },
  "homepage": "https://github.com/barakamwakisha/qlopin#readme",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.5.9",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.3"
  }
}
